                                    CommandParameter="PickersPage"
                                    Text="Pickers" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: Switches--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="SwitchesPage"
                                    Text="Switches Page" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ToggleView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="ToggleViewDemoPage"
                                    Text="ToggleView Demo" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: MultiStateToggleButton--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="MultiStateToggleButtonDemoPage"
                                    Text="MultiStateToggleButton Demo" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ActivityIndicatorService--&gt;" />
                                <Button
                                    Command="{Binding ShowActivityIndicatorCommand}"
                                    Text="ActivityIndicatorService.Show" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo SearchBar--&gt;" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder=""
                                    Text="SearchBar with Text" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder=""
                                    Text="SearchBar with Text (Disabled)" />
                                <SearchBar
                                    IsEnabled="True"
                                    Placeholder="SearchBar Placeholder"
                                    Text="" />
                                <SearchBar
                                    IsEnabled="False"
                                    Placeholder="SearchBar Placeholder (Disabled)"
                                    Text="" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ErrorBox--&gt;" />
                                <s:ErrorBox Text="Some error message" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ValidationErrorBox--&gt;" />
                                <s:ValidationErrorBox Validation="{Binding Validation}" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: CustomEditor--&gt;" />
                                <Editor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="Editor"
                                    Text="{Binding Notes, Mode=TwoWay}" />
                                <s:CustomEditor
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    Placeholder="CustomEditor"
                                    Text="{Binding Notes, Mode=TwoWay}" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ValidatableEditor--&gt;" />
                                <s:ValidatableEditor
                                    x:Name="ValidatableEditorTest1"
                                    Placeholder="ValidatableEditor"
                                    Text=""
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest1}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <s:ValidatableEditor
                                    x:Name="ValidatableEditorTest2"
                                    Placeholder="ValidatableEditor"
                                    Text="ValidatableEditor with Text: Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam."
                                    ValidationErrors="{Binding Source={x:Reference ValidatableEditorTest2}, Path=Text, Converter={StaticResource RandomValidationErrorsConverter}}" />
                                <s:ValidatableEditor
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    MaxLength="{Binding NotesMaxLength, Mode=OneWay}"
                                    MaxLines="3"
                                    Placeholder="ValidatableEditor with MaxLength/MaxLines"
                                    Text="{Binding Notes, Mode=TwoWay}"
                                    ValidationErrors="{Binding Errors[Notes]}">
                                    <s:ValidatableEditor.Keyboard>
                                        <Keyboard x:FactoryMethod="Create">
                                            <x:Arguments>
                                                <KeyboardFlags>CapitalizeSentence,Spellcheck</KeyboardFlags>
                                            </x:Arguments>
                                        </Keyboard>
                                    </s:ValidatableEditor.Keyboard>
                                </s:ValidatableEditor>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <s:ValidatableEditor
                                        Grid.Column="0"
                                        BackgroundColor="Aquamarine"
                                        HidePlaceholder="False"
                                        Placeholder="ValidatableEditor"
                                        Text="" />
                                    <s:ValidatableEntry
                                        Grid.Column="1"
                                        BackgroundColor="LightGoldenrodYellow"
                                        Placeholder="ValidatableEntry"
                                        Text="" />
                                </Grid>
                                <Grid />

                                <!--<users:NotesView BindingContext="{Binding .}" />-->

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo CustomEditor with hidden keyboard--&gt;" />
                                <Editor Text="{Binding LogContent, Mode=OneWay}" />
                                <s:CustomEditor
                                    Margin="0"
                                    HideKeyboard="True"
                                    Keyboard="Text"
                                    Text="{Binding LogContent, Mode=OneWay}"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo HyperLinkLabel--&gt;" />
                                <!--<s:HyperLinkLabel
                                    NavigateCommand="{Binding MailNavigateCommand}"
                                    Text="{Binding AdminEmailAddress, Mode=OneWay}"
                                    TintColor="Red" />
                                <s:HyperLinkLabel
                                    NavigateUri="mailto:anothermail@someaddress.com"
                                    Text="Click here: anothermail@someaddress.com" />
                                <s:HyperLinkLabel
                                    NavigateUri="http://www.thomasgalliker.ch"
                                    Text="Click here to navigate to www.thomasgalliker.ch"
                                    TextColor="Black"
                                    TintColor="Blue" />-->

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo DividerLine--&gt;" />
                                <s:DividerLine />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo NoBarsScrollViewer--&gt;" />
                                <s:CustomScrollView
                                    IsHorizontalScollbarVisible="False"
                                    IsVerticalScollbarVisible="False"
                                    Orientation="Horizontal">
                                    <HorizontalStackLayout>
                                        <Label
                                            BackgroundColor="LightGreen"
                                            Text="Label Green &gt;&gt;&gt;"
                                            WidthRequest="333" />
                                        <Label
                                            BackgroundColor="LightCoral"
                                            Text="&lt;&lt;&lt; Label Red &gt;&gt;&gt;"
                                            WidthRequest="333" />
                                        <Label
                                            BackgroundColor="LightBlue"
                                            Text="&lt;&lt;&lt; Label Blue"
                                            WidthRequest="333" />
                                    </HorizontalStackLayout>
                                </s:CustomScrollView>

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo FontFamily, FontSize, FontAttributes--&gt;" />
                                <StackLayout>
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Micro}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Micro" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Small}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Small" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.MidMedium}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.MidMedium" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Medium}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Medium" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.Large}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.Large" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XLarge" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XXLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XXLarge" />
                                    <Label
                                        FontAttributes="None"
                                        FontFamily="{DynamicResource Theme.FontFamily.Default}"
                                        FontSize="{DynamicResource Theme.FontSize.XXXLarge}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Theme.FontSize.XXXLarge" />

                                    <s:DividerLine />

                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Body1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Body1}"
                                        FontSize="{DynamicResource Theme.FontSize.Body1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Body1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Body2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Body2}"
                                        FontSize="{DynamicResource Theme.FontSize.Body2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Body2" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Button}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Button}"
                                        FontSize="{DynamicResource Theme.FontSize.Button}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Button" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Input}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Input}"
                                        FontSize="{DynamicResource Theme.FontSize.Input}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Input" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H1}"
                                        FontSize="{DynamicResource Theme.FontSize.H1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H2}"
                                        FontSize="{DynamicResource Theme.FontSize.H2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H2" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H3}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H3}"
                                        FontSize="{DynamicResource Theme.FontSize.H3}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H3" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H4}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H4}"
                                        FontSize="{DynamicResource Theme.FontSize.H4}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H4" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H5}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H5}"
                                        FontSize="{DynamicResource Theme.FontSize.H5}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H5" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.H6}"
                                        FontFamily="{DynamicResource Theme.FontFamily.H6}"
                                        FontSize="{DynamicResource Theme.FontSize.H6}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="H6" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Caption}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Caption}"
                                        FontSize="{DynamicResource Theme.FontSize.Caption}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Caption" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Overline}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Overline}"
                                        FontSize="{DynamicResource Theme.FontSize.Overline}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Overline" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Title}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Title}"
                                        FontSize="{DynamicResource Theme.FontSize.Title}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Title" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Subtitle1}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Subtitle1}"
                                        FontSize="{DynamicResource Theme.FontSize.Subtitle1}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Subtitle1" />
                                    <Label
                                        FontAttributes="{DynamicResource Theme.FontAttributes.Subtitle2}"
                                        FontFamily="{DynamicResource Theme.FontFamily.Subtitle2}"
                                        FontSize="{DynamicResource Theme.FontSize.Subtitle2}"
                                        Style="{StaticResource DemoLabelStyle}"
                                        Text="Subtitle2" />
                                </StackLayout>

                                <s:DividerLine />

                                <Button
                                    Command="{Binding DumpResourcesCommand}"
                                    Text="Dump Resources" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo LongPressEffect--&gt;" />
                                <Grid
                                    Padding="20"
                                    BackgroundColor="LightGray">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Label
                                        x:Name="LongPressLabel"
                                        s:LongPressEffect.Command="{Binding LongPressCommand}"
                                        s:LongPressEffect.CommandParameter="{Binding Text, Source={x:Reference LongPressLabel}}"
                                        BackgroundColor="LightBlue"
                                        FontSize="Medium"
                                        LineBreakMode="WordWrap"
                                        Text="Press and hold to run the attached command. This effect can be used if you want to make text accessible e.g. for copy/paste.">
                                        <Label.Effects>
                                            <s:LongPressEffect />
                                        </Label.Effects>
                                    </Label>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding NormalPressCommand}"
                                            CommandParameter="{Binding Text, Source={x:Reference LongPressLabel}}" />
                                    </Grid.GestureRecognizers>
                                </Grid>

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo CustomButton (PrimaryStyle)--&gt;" />
                                <s:CustomButton
                                    x:Name="CustomButtonPrimary"
                                    Command="{Binding SaveProfileButtonCommand}"
                                    IsEnabled="{Binding CanExecuteSaveProfileButtonCommand}"
                                    Style="{StaticResource CustomButtonPrimaryStyle}"
                                    Text="{s:Translate SaveButtonText}"
                                    VerticalOptions="StartAndExpand" />
                                <s:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonPrimaryStyle}"
                                    Text="Primary (Enabled)" />
                                <s:CustomButton
                                    IsEnabled="False"
                                    Style="{DynamicResource CustomButtonPrimaryStyle}"
                                    Text="Primary (Disabled)" />
                                <VerticalStackLayout>
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding IsEnabled, StringFormat='IsEnabled={0}', Source={x:Reference CustomButtonPrimary}}" />
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding IsSaving, StringFormat='IsSaving={0}'}" />
                                    <Label
                                        FontSize="Micro"
                                        LineBreakMode="CharacterWrap"
                                        Text="{Binding CanExecuteSaveProfileButtonCommand, StringFormat='CanExecuteSaveProfileButtonCommand={0}'}" />
                                </VerticalStackLayout>

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo CustomButton (SecondaryStyle)--&gt;" />
                                <s:CustomButton
                                    x:Name="CustomButtonSecondary"
                                    Command="{Binding LoadDataButtonCommand}"
                                    IsEnabled="{Binding CanExecuteLoadDataButtonCommand}"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="{s:Translate LoadDataButtonText}"
                                    VerticalOptions="StartAndExpand" />
                                <s:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="Secondary (Enabled)" />
                                <s:CustomButton
                                    IsEnabled="False"
                                    Style="{DynamicResource CustomButtonSecondaryStyle}"
                                    Text="Secondary (Disabled)" />
                                <s:CustomButton
                                    IsEnabled="True"
                                    Style="{DynamicResource CustomButtonStyle}"
                                    Text="CustomButtonStyle (Enabled)" />
                                <s:CustomButton
                                    IsEnabled="False"
