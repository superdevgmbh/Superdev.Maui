                            </StackLayout>

                        </StackLayout>

                        <Label
                            IsVisible="{Binding IsBusy, Mode=OneWay}"
                            Style="{StaticResource DemoLabelStyle}"
                            Text="&lt;!--Demo CustomActivityIndicator--&gt;"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Start" />
                        <s:CustomActivityIndicator
                            Caption="{s:Translate LoadingText}"
                            IsVisible="{Binding IsBusy, Mode=OneWay}" />
                    </Grid>
                </ScrollView>
            </Grid>

            <s:CustomActivityIndicator
                Grid.Row="0"
                Caption="{s:Translate LoadingText}"
                IsVisible="{Binding IsBusy, Mode=OneWay}" />

            <s:ViewModelErrorControl
                Grid.Row="0"
                IsVisible="{Binding HasViewModelError, Mode=OneWay, FallbackValue=False}"
