                                    CommandParameter="LabelDemoPage"
                                    Text="CustomLabel" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: ListView--&gt;" />
                                <Button
                                    Command="{Binding NavigateToPageCommand}"
                                    CommandParameter="ListViewDemoPage"
                                    Text="ListView" />

                                <Label
                                    Style="{StaticResource DemoLabelStyle}"
                                    Text="&lt;!--Demo: Pickers--&gt;" />
                                <Button
