<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="SuperdevMauiDemoApp.Views.SliderDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    Title="SliderDemoPage">

    <ScrollView>
        <VerticalStackLayout Padding="{DynamicResource Theme.Padding.Medium}" Spacing="{DynamicResource Theme.Spacing.Medium}">
            <Label Style="{StaticResource DemoLabelStyle}" Text="Slider" />
            <Slider
                Maximum="100"
                Minimum="0"
                Value="50" />
            <Label Style="{StaticResource DemoLabelStyle}" Text="CustomSlider" />
            <s:CustomSlider
                Maximum="100"
                Minimum="0"
                Value="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>