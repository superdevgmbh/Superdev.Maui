<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuperdevMauiDemoApp.Views.PickerDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    xmlns:vm="clr-namespace:SuperdevMauiDemoApp.ViewModels"
    x:DataType="vm:PickerDemoViewModel"
    Title="PickerDemoPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding ToggleIsReadonlyCommand}"
            Text="{Binding IsReadonly, StringFormat='[RO={0}]'}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid>
            <VerticalStackLayout
                Padding="{DynamicResource Theme.Padding.CardPadding}"
                Spacing="{DynamicResource Theme.Spacing.Medium}">
                <s:CardView>
                    <VerticalStackLayout>
                        <s:LabelSection Text="Picker" />
                        <s:HeaderDivider />
                        <VerticalStackLayout
                            Padding="{DynamicResource Theme.Padding.CardViewPadding}"
                            BackgroundColor="{DynamicResource CardViewStyle.BackgroundColor}"
                            Spacing="{DynamicResource Theme.Spacing.Medium}">

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="Picker with ItemsSource=string[], TextColor=Magenta, TitleColor=null" />
                            <Picker
                                ItemsSource="{Binding StringValues}"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}"
                                TextColor="Magenta"
                                Title="Picker"
                                TitleColor="{x:Null}" />

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="Picker with ItemsSource=string[], TextColor=Green, TitleColor=Red" />
                            <Picker
                                ItemDisplayBinding="{Binding .}"
                                ItemsSource="{Binding StringValues}"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}"
                                TextColor="Green"
                                Title="Please select"
                                TitleColor="Red" />
                        </VerticalStackLayout>
                        <s:FooterDivider />
                    </VerticalStackLayout>
                </s:CardView>
                <s:CardView>
                    <VerticalStackLayout>
                        <s:LabelSection Text="CustomPicker" />
                        <s:HeaderDivider />
                        <VerticalStackLayout
                            Padding="{DynamicResource Theme.Padding.CardViewPadding}"
                            BackgroundColor="{DynamicResource CardViewStyle.BackgroundColor}"
                            Spacing="{DynamicResource Theme.Spacing.Medium}">

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="CustomPicker with ItemsSource=string[]" />
                            <s:CustomPicker
                                ItemDisplayBinding="{Binding .}"
                                ItemsSource="{Binding StringValues}"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}"
                                Title="Please select" />

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="CustomPicker with ItemsSource=string[], TextColor=Blue, TitleColor=Red, PlaceholderColor=Green" />
                            <s:CustomPicker
                                ItemDisplayBinding="{Binding .}"
                                ItemsSource="{Binding StringValues}"
                                PlaceholderColor="Green"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}"
                                TextColor="Blue"
                                Title="Please select"
                                TitleColor="Red" />
                        </VerticalStackLayout>
                        <s:FooterDivider />
                    </VerticalStackLayout>
                </s:CardView>
                <s:CardView>
                    <VerticalStackLayout>
                        <s:LabelSection Text="ValidatablePickers" />
                        <s:HeaderDivider />
                        <VerticalStackLayout
                            Padding="{DynamicResource Theme.Padding.CardViewPadding}"
                            BackgroundColor="{DynamicResource CardViewStyle.BackgroundColor}"
                            Spacing="{DynamicResource Theme.Spacing.Medium}">
                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="ValidatablePicker with ItemsSource=string[]" />
                            <s:ValidatablePicker
                                DisplayMemberPath="."
                                ItemsSource="{Binding StringValues}"
                                Placeholder="Please select"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}" />

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="ValidatablePicker with ItemsSource=string[] and ItemDisplayName=." />
                            <s:ValidatablePicker
                                DisplayMemberPath="."
                                ItemsSource="{Binding StringValues}"
                                Placeholder="Please select"
                                SelectedItem="{Binding SelectedString, Mode=TwoWay}" />

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="ValidatablePicker with ItemsSource=Country[] and ItemDisplayName=Name" />
                            <s:ValidatablePicker
                                DisplayMemberPath="Name"
                                IsReadonly="{Binding IsReadonly, Mode=OneWay}"
                                ItemsSource="{Binding Countries}"
                                Placeholder="ValidatablePicker"
                                ReadonlyText="ReadonlyText"
                                SelectedItem="{Binding Country, Mode=TwoWay}"
                                ValidationErrors="{Binding Validation.Errors[Country]}" />

                            <Label
                                Style="{StaticResource DemoLabelStyle}"
                                Text="ValidatablePicker IsReadonly=true, ItemDisplayName=null" />
                            <s:ValidatablePicker
                                DisplayMemberPath="{x:Null}"
                                IsReadonly="True"
                                ItemsSource="{Binding Countries, Mode=OneWay}"
                                Placeholder="ValidatablePicker"
                                SelectedItem="{Binding Country, Mode=TwoWay}" />
                        </VerticalStackLayout>
                        <s:FooterDivider />
                    </VerticalStackLayout>
                </s:CardView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>