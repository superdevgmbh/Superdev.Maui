<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuperdevMauiDemoApp.Views.BehaviorDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    xmlns:vm="clr-namespace:SuperdevMauiDemoApp.ViewModels"
    x:DataType="vm:BehaviorDemoViewModel"
    Title="BehaviorDemoPage">

    <ContentPage.Behaviors>
        <s:StatusBarBehavior
            StatusBarColor="{StaticResource GreenA400}"
            StatusBarStyle="Light" />
        <s:EventToCommandBehavior
            Command="{Binding AppearingCommand}"
            EventName="Appearing" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout
            Padding="{DynamicResource Theme.Padding.Medium}"
            Spacing="{DynamicResource Theme.Spacing.Medium}">

            <Button Text="Click here">
                <Button.Behaviors>
                    <s:EventToCommandBehavior
                        Command="{Binding ButtonClickCommand}"
                        EventName="Clicked" />
                </Button.Behaviors>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>