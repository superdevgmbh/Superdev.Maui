<?xml version="1.0" encoding="utf-8" ?>

<s:CustomViewCell
    x:Class="SuperdevMauiDemoApp.Views.ItemTemplates.CountryItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    xmlns:viewModels="clr-namespace:SuperdevMauiDemoApp.ViewModels"
    x:DataType="viewModels:CountryViewModel"
    SelectedBackgroundColor="White">

    <ViewCell.ContextActions>
        <MenuItem
            Command="{Binding DeleteCommand}"
            CommandParameter="{Binding .}"
            IsDestructive="True"
            Text="{s:Translate DeleteButtonText}" />
    </ViewCell.ContextActions>

    <SwipeView>
        <SwipeView.RightItems>
            <SwipeItems>
                <s:NegativeSwipeItem
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding .}"
                    IconImageSource="{s:ImageResource rectangle_magenta_192}"
                    Text="Negative" />
                <s:DestructiveSwipeItem
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding .}"
                    IconImageSource="{s:ImageResource rectangle_magenta_192}"
                    Text="Destructive" />
                <s:NeutralSwipeItem
                    Command="{Binding DeleteCommand}"
                    CommandParameter="{Binding .}"
                    IconImageSource="{s:ImageResource rectangle_magenta_192}"
                    Text="Neutral" />
            </SwipeItems>
        </SwipeView.RightItems>

        <Grid
            Padding="{DynamicResource Theme.Padding.Medium}"
            BackgroundColor="#F5F5F5"
            HeightRequest="66">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ItemSelectedCommand}" />
            </Grid.GestureRecognizers>
            <Label
                Style="{DynamicResource EntryLabelStyle}"
                Text="{Binding Name}"
                HorizontalOptions="Start"
                VerticalOptions="Center" />
        </Grid>

    </SwipeView>
</s:CustomViewCell>