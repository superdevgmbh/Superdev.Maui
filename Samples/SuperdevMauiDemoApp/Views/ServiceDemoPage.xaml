<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuperdevMauiDemoApp.Views.ServiceDemoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    xmlns:vm="clr-namespace:SuperdevMauiDemoApp.ViewModels"
    x:DataType="vm:ServiceDemoViewModel"
    s:StatusBar.Color="{DynamicResource LightGreen100}"
    s:StatusBar.Style="Light"
    BackgroundColor="{DynamicResource PageBackgroundColor}"
    Title="ServiceDemoPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="{DynamicResource Theme.Padding.Medium}"
            Spacing="{DynamicResource Theme.Spacing.Medium}">
            <Label
                Style="{StaticResource DemoLabelStyle}"
                Text="IStatusBarService" />
            <Button
                Command="{Binding SetStatusBarColorCommand}"
                Text="SetColor" />
            <Button
                Command="{Binding SetStatusBarModeCommand}"
                Text="SetStyle" />
            <Label
                Style="{StaticResource DemoLabelStyle}"
                Text="IGeolocationSettings" />
            <Button
                Command="{Binding ShowGeolocationSettingsCommand}"
                Text="ShowSettingsUI" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>