<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui">

    <!-- Picker -->
    <Style
        x:Key="PickerStyle_Override"
        ApplyToDerivedTypes="True"
        BasedOn="{StaticResource PickerStyle}"
        TargetType="Picker">
        <Setter Property="s:DialogExtensions.NegativeButtonText" Value="{s:Translate CancelButtonText}" />
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
    </Style>
    <Style
        BasedOn="{StaticResource PickerStyle_Override}"
        TargetType="Picker" />

    <Style
        x:Key="CustomPickerStyle_Override"
        BasedOn="{StaticResource PickerStyle_Override}"
        TargetType="s:CustomPicker" />
    <Style
        BasedOn="{StaticResource CustomPickerStyle_Override}"
        TargetType="s:CustomPicker" />
</ResourceDictionary>