<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui">

    <!-- Picker -->
    <Style
        x:Key="PickerStyle_Merge"
        TargetType="Picker">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
        <Setter Property="s:DialogExtensions.PositiveButtonText" Value="{s:Translate OkButtonText}" />
        <Setter Property="s:DialogExtensions.NegativeButtonText" Value="{s:Translate CancelButtonText}" />
    </Style>

    <!-- DatePicker -->
    <Style
        x:Key="DatePickerStyle_Merge"
        TargetType="DatePicker">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
        <Setter Property="s:DialogExtensions.PositiveButtonText" Value="{s:Translate OkButtonText}" />
        <Setter Property="s:DialogExtensions.NegativeButtonText" Value="{s:Translate CancelButtonText}" />
    </Style>

    <!-- NullableDatePicker -->
    <Style
        x:Key="NullableDatePickerStyle_Merge"
        TargetType="s:NullableDatePicker">
        <Setter Property="s:DialogExtensions.NeutralButtonText" Value="{s:Translate ClearButtonText}" />
    </Style>

    <!-- TimePicker -->
    <Style
        x:Key="TimePickerStyle_Merge"
        TargetType="TimePicker">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
        <Setter Property="s:DialogExtensions.PositiveButtonText" Value="{s:Translate OkButtonText}" />
        <Setter Property="s:DialogExtensions.NegativeButtonText" Value="{s:Translate CancelButtonText}" />
    </Style>

    <!-- NullableTimePicker -->
    <Style
        x:Key="NullableTimePickerStyle_Merge"
        TargetType="s:NullableTimePicker">
        <Setter Property="s:DialogExtensions.NeutralButtonText" Value="{s:Translate ClearButtonText}" />
    </Style>

    <!-- Entry -->
    <Style
        x:Key="EntryStyle_Merge"
        TargetType="Picker">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
    </Style>

    <!-- Editor -->
    <Style
        x:Key="EditorStyle_Merge"
        TargetType="Picker">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
    </Style>

    <!-- SearchBar -->
    <Style
        x:Key="SearchBarStyle_Merge"
        TargetType="SearchBar">
        <Setter Property="s:DialogExtensions.DoneButtonText" Value="{s:Translate DoneButtonText}" />
    </Style>

</ResourceDictionary>