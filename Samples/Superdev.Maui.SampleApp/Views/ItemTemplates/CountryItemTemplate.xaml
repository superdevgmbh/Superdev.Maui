<?xml version="1.0" encoding="utf-8" ?>
<s:CustomViewCell
    x:Class="Superdev.Maui.SampleApp.Views.ItemTemplates.CountryItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:s="http://schemas.superdev.ch/dotnet/2021/maui"
    SelectedBackgroundColor="White">

    <ViewCell.ContextActions>
        <MenuItem
            Command="{Binding DeleteCommand}"
            CommandParameter="{Binding .}"
            IsDestructive="True"
            Text="{s:Translate DeleteButtonText}" />
    </ViewCell.ContextActions>

    <StackLayout Padding="0,4,0,4">
        <StackLayout
            BackgroundColor="#BEF5F5F5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Label
                Style="{DynamicResource EntryLabelStyle}"
                Text="{Binding Name}"
                HorizontalOptions="Start"
                VerticalOptions="Center" />
            <BoxView
                BackgroundColor="{DynamicResource ListSeparator}"
                HeightRequest="1"
                HorizontalOptions="FillAndExpand" />

        </StackLayout>
    </StackLayout>
</s:CustomViewCell>