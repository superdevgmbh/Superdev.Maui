        </Switch>

        <Grid.GestureRecognizers>
            <TapGestureRecognizer
                Command="{Binding Command, Mode=OneWay}"
                CommandParameter="{Binding CommandParameter, Mode=OneWay}" />
        </Grid.GestureRecognizers>
    </Grid>
</ViewCell>