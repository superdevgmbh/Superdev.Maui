<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Superdev.Maui.Controls.DefaultActivityIndicatorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Superdev.Maui.Controls"
    x:Name="Control"
    BackgroundColor="Transparent">

    <Grid
        Padding="50"
        ColumnDefinitions="Auto"
        RowDefinitions="Auto"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <controls:CustomActivityIndicator
            x:Name="ActivityIndicator"
            BackgroundColor="{DynamicResource Theme.Page.BackgroundColor}"
            IsBusy="{Binding Source={x:Reference Control}, Path=IsVisible}" />
    </Grid>
</ContentPage>