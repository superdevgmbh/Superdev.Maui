<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Superdev.Maui.Controls.CustomActivityIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Control"
    IsVisible="{Binding IsBusy, Source={x:Reference Control}, FallbackValue=False}">

    <Grid
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Border
            Grid.Row="0"
            BackgroundColor="{Binding Source={x:Reference Control}, Path=BackgroundColor}"
            StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="{Binding Source={x:Reference Control}, Path=CornerRadius}" />
            </Border.StrokeShape>
            <StackLayout
                Padding="{Binding Source={x:Reference Control}, Path=Padding}"
                Spacing="{DynamicResource Theme.Spacing.Medium}">
                <StackLayout.Orientation>
                    <OnPlatform x:TypeArguments="StackOrientation">
                        <On
                            Platform="Android"
                            Value="Vertical" />
                        <On
                            Platform="iOS"
                            Value="Horizontal" />
                    </OnPlatform>
                </StackLayout.Orientation>

                <!-- ActivityIndicator -->
                <ActivityIndicator
                    BackgroundColor="Transparent"
                    IsRunning="{Binding IsBusy, Source={x:Reference Control}, FallbackValue=False}"
                    Style="{Binding ActivityIndicatorStyle, Source={x:Reference Control}}">
                    <ActivityIndicator.WidthRequest>
                        <OnPlatform x:TypeArguments="x:Double">
                            <On
                                Platform="Android"
                                Value="100" />
                            <On
                                Platform="iOS"
                                Value="24" />
                        </OnPlatform>
                    </ActivityIndicator.WidthRequest>
                </ActivityIndicator>

                <!-- Title -->
                <Label
                    Style="{Binding TitleStyle, Source={x:Reference Control}}"
                    Text="{Binding Title, Source={x:Reference Control}}" />
            </StackLayout>
        </Border>
    </Grid>
</ContentView>
