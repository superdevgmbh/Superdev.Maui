<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    x:Class="Superdev.Maui.Controls.PageActivityIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Control"
    Padding="{DynamicResource Theme.Padding.Medium}"
    BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BackgroundColor}"
    IsVisible="{Binding IsBusy, Source={x:Reference Control}, FallbackValue=False}"
    HorizontalOptions="Fill"
    VerticalOptions="Fill">

    <Grid
        RowDefinitions="*,*"
        RowSpacing="{DynamicResource Theme.Spacing.Large}"
        HorizontalOptions="Fill"
        VerticalOptions="Fill">

        <!-- ActivityIndicator -->
        <VerticalStackLayout
            Grid.Row="0"
            Padding="{DynamicResource Theme.Padding.Medium}"
            HorizontalOptions="Center"
            VerticalOptions="End">
            <ActivityIndicator
                IsRunning="{Binding IsBusy, Source={x:Reference Control}}"
                Style="{Binding ActivityIndicatorStyle, Source={x:Reference Control}}" />
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Row="1"
            Spacing="{DynamicResource Theme.Spacing.Medium}"
            HorizontalOptions="Center"
            VerticalOptions="Start">

            <!-- Title -->
            <Label
                IsVisible="{Binding Title, Source={x:Reference Control}, Converter={StaticResource StringIsNullOrEmptyToFalseConverter}}"
                Style="{Binding Source={x:Reference Control}, Path=TitleStyle}"
                Text="{Binding Title, Source={x:Reference Control}}" />

            <!-- Text -->
            <Label
                IsVisible="{Binding Text, Source={x:Reference Control}, Converter={StaticResource StringIsNullOrEmptyToFalseConverter}}"
                Style="{Binding Source={x:Reference Control}, Path=TextStyle}"
                Text="{Binding Text, Source={x:Reference Control}}" />
        </VerticalStackLayout>
    </Grid>
</Grid>