<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Superdev.Maui.Resources.Styles.SpacingResources"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:Double x:Key="Theme.Slider.Height">27</x:Double>
    <x:Double x:Key="Theme.Button.Height">48</x:Double>
    <x:Double x:Key="Theme.Button.Outlined.BorderWidth">1</x:Double>
    <x:Int32 x:Key="Theme.Button.CornerRadius">4</x:Int32>
    <Thickness x:Key="Theme.Dialog.Margin">40</Thickness>
    <Thickness x:Key="Theme.Snackbar.Margin">8,0,8,16</Thickness>
    <OnIdiom
        x:TypeArguments="x:Double"
        x:Key="Theme.Dialog.Width">
        <OnIdiom.Tablet>560</OnIdiom.Tablet>
        <OnIdiom.Phone>280</OnIdiom.Phone>
    </OnIdiom>
    <OnIdiom
        x:TypeArguments="x:Double"
        x:Key="Theme.Snackbar.Width">
        <OnIdiom.Tablet>344</OnIdiom.Tablet>
        <OnIdiom.Phone>-1</OnIdiom.Phone>
    </OnIdiom>
    <OnIdiom
        x:TypeArguments="LayoutOptions"
        x:Key="Theme.Snackbar.HorizontalOptions">
        <OnIdiom.Tablet>Center</OnIdiom.Tablet>
        <OnIdiom.Phone>FillAndExpand</OnIdiom.Phone>
    </OnIdiom>
    <x:Double x:Key="Theme.LineHeight">1.4</x:Double>

</ResourceDictionary>