        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{DynamicResource Theme.Color.TextColorBright}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
        <Setter Property="ControlTemplate">
            <!--
                Source: BuildDefaultTemplate method
                https://github.com/dotnet/maui/blob/b138f16e4beba081c45e45ff54e56245b6fb44e2/src/Controls/src/Core/RadioButton/RadioButton.cs#L444
            -->
            <ControlTemplate>
                <Border
                    x:Name="TemplateRoot"
                    Padding="6"
                    Stroke="{TemplateBinding BorderColor}"
                    StrokeThickness="{TemplateBinding BorderWidth}"
                    HorizontalOptions="{TemplateBinding HorizontalOptions}"
                    VerticalOptions="{TemplateBinding VerticalOptions}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="{TemplateBinding CornerRadius}" />
                    </Border.StrokeShape>
                    <Grid
                        Padding="2"
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="6"
                        RowDefinitions="Auto"
                        RowSpacing="0">

                        <!-- Outer ellipse -->
                        <Ellipse
                            x:Name="UncheckedButton"
                            Grid.Row="0"
                            Grid.Column="0"
                            Aspect="Uniform"
                            Fill="Transparent"
                            HeightRequest="21"
                            InputTransparent="False"
                            Stroke="{DynamicResource Theme.Color.Secondary}"
                            StrokeThickness="2"
                            WidthRequest="21"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />

                        <!-- Inner checkmark -->
                        <Ellipse
                            x:Name="CheckedIndicator"
                            Grid.Row="0"
                            Grid.Column="0"
                            Aspect="Uniform"
                            Fill="{DynamicResource Theme.Color.Secondary}"
                            HeightRequest="11"
                            InputTransparent="False"
                            Opacity="0"
                            Stroke="{DynamicResource Theme.Color.Secondary}"
                            WidthRequest="11"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />

                        <!-- Content -->
                        <ContentPresenter
                            x:Name="ContentPresenter"
                            Grid.Column="1"
                            Margin="{TemplateBinding Padding}"
                            BackgroundColor="{TemplateBinding BackgroundColor}"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill" />
                    </Grid>

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroupList>
                            <!-- Common states -->
                            <VisualStateGroup Name="Common">
                                <VisualState Name="Normal" />
                                <VisualState Name="Disabled" />
                            </VisualStateGroup>

                            <!-- Checked / Unchecked states -->
                            <VisualStateGroup Name="CheckedStates">
                                <VisualState Name="Checked">
                                    <VisualState.Setters>
                                        <Setter TargetName="CheckedIndicator" Property="Ellipse.Opacity" Value="1" />
                                        <Setter TargetName="UncheckedButton" Property="Ellipse.Stroke" Value="{DynamicResource Theme.Color.Secondary}" />
                                        <Setter TargetName="CheckedIndicator" Property="Ellipse.Stroke" Value="{DynamicResource Theme.Color.Secondary}" />
                                        <Setter TargetName="CheckedIndicator" Property="Ellipse.Fill" Value="{DynamicResource Theme.Color.Secondary}" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState Name="Unchecked">
                                    <VisualState.Setters>
                                        <Setter TargetName="CheckedIndicator" Property="Ellipse.Opacity" Value="0" />
                                        <Setter TargetName="UncheckedButton" Property="Ellipse.Stroke" Value="{DynamicResource Theme.Color.Secondary}" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </VisualStateManager.VisualStateGroups>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
